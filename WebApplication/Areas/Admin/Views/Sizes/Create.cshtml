@model CreateSizeViewModel

    <div class="headerCe">Tworzenie nowego rozmiaru</div>

    <form method="post" asp-action="Create" asp-controller="Sizes">

        <div class="db">
            <div class="row">
                <div class="fieldName">
                    <span>Nazwa rozmiaru</span>
                </div>
                <div class="fieldEdit">
                    <input asp-for="Name" />
                    <span asp-validation-for="Name" class="c-red"></span>
                    <span class="c-red">@Model.Result</span>
                </div>
            </div>
        </div>

        <div class="bottom-bar-options">
            <a asp-action="Index" asp-controller="Sizes" class="form-button-a">Anuluj</a>
            <input type="submit" value="Zapisz" class="form-button" />
        </div>

    </form> 