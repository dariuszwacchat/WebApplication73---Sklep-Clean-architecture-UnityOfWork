

<div class="topNavigation centery">
    <div class="w-900px" style="margin: 0 auto;">

        <div class="df-sb fs-11 centery">
            <div class="df">
                <span>@DateTime.Now.ToShortDateString()</span>
                <span class="ml-2 mr-2">:</span>
                <span class="ml-6">@DateTime.Now.ToShortTimeString()</span>
            </div>
            <div class="df centery">
                <div>Witaj: @User.Identity.Name</div>



                <!-- dropdown button -->
                <div class="dropdown-container">
                    <div class="dropdown">
                        <button class="dropbtn">></button>
                        <div class="dropdown-content">
                            <a asp-action="ChangePassword" asp-controller="Account" asp-area="Admin">Zmień hasło</a>
                            <a asp-action="ChangeEmail" asp-controller="Account" asp-area="Admin">Zmień email</a>

                            @*Opcja "Delete" nie jest dostępna dla administratora*@
                            @{
                                try
                                {
                                    if (User.Identity.Name != "admin@admin.pl")
                                    {
                                        <a asp-action="Delete" asp-controller="Settings">Usuń konto</a>
                                    }
                                }
                                catch { }
                            }

                            <a asp-action="Edit" asp-controller="Account" asp-area="Admin">Zaktualizuj dane</a>
                            <a asp-action="Messages" asp-controller="Account" asp-area="Admin">Wiadomości</a>
                            <a asp-action="Logout" asp-controller="Account" asp-area="Admin">Wyloguj</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<div class="w-900px" style="margin: 0 auto;"> 
    <partial name="_navigationInfo" />
</div>
<div class="border-bottom"></div>
