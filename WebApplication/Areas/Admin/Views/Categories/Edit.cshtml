@model EditCategoryViewModel

    <div class="headerCe">Edytowanie istniejącej kategorii</div>

    <form method="post" asp-action="Edit" asp-controller="Categories">
        <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId" />


        <div class="db">

            <div class="row">
                <div class="fieldName">
                    <span>Nazwa kategorii</span>
                </div>
                <div class="fieldEdit">
                    <input asp-for="Name" />
                    <span asp-validation-for="Name" class="c-red"></span>
                    <span class="c-red">@Model.Result</span>
                </div>
            </div>

            <div class="row">
                <div class="fieldName">
                    <span>Wyświetlana nazwa kategorii</span>
                </div>
                <div class="fieldEdit">
                    <input asp-for="FullName" />
                    <span asp-validation-for="FullName" class="c-red"></span>
                </div>
            </div>
        </div>

        <div class="bottom-bar-options">
            <a asp-action="Index" asp-controller="Categories" class="form-button-a">Anuluj</a>
            <input type="submit" value="Zapisz" class="form-button" />
        </div>

    </form> 