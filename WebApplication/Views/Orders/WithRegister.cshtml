@model ApplicationUser

<h2>Zweryfukuj swoje dane do wysyłki</h2>

<div class="db">
    <div class="row">

        <div class="fieldName">
            <span>Imię</span>
        </div>
        <div class="fieldEdit">
            <input asp-for="Client.Imie" placeholder="Jan" />
            <span asp-validation-for="Client.Imie" class="c-red"></span>
        </div>
    </div>

    <div class="row">
        <div class="fieldName">
            <span>Nazwisko</span>
        </div>
        <div class="fieldEdit">
            <input asp-for="Client.Nazwisko" placeholder="Kowalski" />
            <span asp-validation-for="Client.Nazwisko" class="c-red"></span>
        </div>
    </div>

    <div class="row">
        <div class="fieldName">
            <span>Ulica</span>
        </div>
        <div class="fieldEdit">
            <input asp-for="Client.Ulica" placeholder="Ulica" />
            <span asp-validation-for="Client.Ulica" class="c-red"></span>
        </div>
    </div>

    <div class="row">
        <div class="fieldName">
            <span>Numer ulicy</span>
        </div>
        <div class="fieldEdit">
            <input asp-for="Client.NumerUlicy" placeholder="15" />
            <span asp-validation-for="Client.NumerUlicy" class="c-red"></span>
        </div>
    </div>


    <div class="row">
        <div class="fieldName">
            <span>Kod pocztowy</span>
        </div>
        <div class="fieldEdit">
            <input asp-for="Client.KodPocztowy" placeholder="12-123" />
            <span asp-validation-for="Client.KodPocztowy" class="c-red"></span>
        </div>
    </div>

    <div class="row">
        <div class="fieldName">
            <span>Miejscowość</span>
        </div>
        <div class="fieldEdit">
            <input asp-for="Client.Miejscowosc" placeholder="Warszawa" />
            <span asp-validation-for="Client.Miejscowosc" class="c-red"></span>
        </div>
    </div>

    <div class="row">
        <div class="fieldName">
            <span>Kraj</span>
        </div>
        <div class="fieldEdit">
            <select asp-for="Client.Kraj" asp-items='@new SelectList(new List <string> () { "Polska" })' class="selectOption"></select>
            <span asp-validation-for="Client.Kraj" class="c-red"></span>
        </div>
    </div>

    <div class="row">
        <div class="fieldName">
            <span>Telefon</span>
        </div>
        <div class="fieldEdit">
            <input asp-for="Client.Telefon" placeholder="123-123-123" />
            <span asp-validation-for="Client.Telefon" class="c-red"></span>
        </div>
    </div>

    <div class="row">
        <div class="fieldName">
            <span>Email</span>
        </div>
        <div class="fieldEdit">
            <input asp-for="Client.Email" placeholder="adres@email.pl" />
            <span asp-validation-for="Client.Email" class="c-red"></span>
        </div>
    </div>

    <div class="row">
        <div class="fieldName">
            <span>Rodzaj osoby</span>
        </div>
        <div class="fieldEdit">
            <select asp-for="Client.RodzajOsoby" asp-items='@new SelectList(Enum.GetValues(typeof(RodzajOsoby)))' class="selectOption"></select>
            <span asp-validation-for="Client.RodzajOsoby" class="c-red"></span>
        </div>
    </div>

    <div class="row">
        <div class="fieldName">
            <span>Płeć</span>
        </div>
        <div class="fieldEdit">
            <select asp-for="Client.Plec" asp-items='@new SelectList(Enum.GetValues(typeof(Plec)))' class="selectOption"></select>
            <span asp-validation-for="Client.Plec" class="c-red"></span>
        </div>
    </div>

