@model Order

@{
    int index = 0;
}



<div class="df">

    <div class="w-250px">
        <div class="w-250px db">
            <partial name="_leftNavigationUser" />
        </div>
    </div>


    <div class="w-100">

        <table class="table">
            <thead>
                <tr>
                    <th>Lp</th>
                    <th>Zdjęcie</th>
                    <th>Nazwa</th>
                    <th>Ilość</th>
                    <th>Cena</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderItem in Model.OrderItems)
                {
                    index++;

                    <tr>
                        <td>@index.</td>

                        <td>
                            @if (orderItem.Product != null)
                            {
                                if (orderItem.Product.PhotosProduct != null && orderItem.Product.PhotosProduct.Any())
                                {
                                    <div class="image w-50px h-50px">
                                        <partial name="_displayPhoto" model="@orderItem.Product.PhotosProduct[0].PhotoData" />
                                    </div>
                                }
                            }
                        </td>

                        <td>
                            @orderItem.Product.Name
                        </td>


                        <td>
                            @orderItem.Ilosc szt.
                        </td> 


                        <td>
                            @orderItem.Suma zł
                        </td>

                    </tr>
                } 
            </tbody>
        </table>

    </div>

</div>

